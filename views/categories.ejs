<% include partials/head %>
    <div class="container">
    	<h2 class="display-3 text-center"><%= title %></h2>
		<ul class="list-group mt-4">
			<% categories.forEach((category) => { %> 
			  <a href="/business/category/<%= category.id %>"><li class="list-group-item d-flex justify-content-between align-items-center">
			    <h5><%= category.title %></h5>
			    <span class="badge badge-info badge-pill"><%= category.counter %></span>
			  </li></a>
			<% }) %>
		</ul>
    </div>
<% include partials/footer %>