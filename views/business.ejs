<% include partials/head %>
	<div class="container businessHeader">
		<div class="row">
			<div class="col-md-7">
				<div class="business">
					<h2><%= business.businessName %></h2>
					<p><%= business.slogan %></p>	
								<div class="reviews">
									<% if(business.average_stars) { %>
									<div class="ratings mb-2 mr-2">
										<% for(let i = 0; i < Math.round(business.average_stars); i++){ %>
											<i class="fas fa-star checked mb-3"></i>											
										<% } %>
									</div>
									<h5 class="mr-3 mt-1"><%= Math.round(business.average_stars) %> ratings</h5>
									<% } else { %>
										<h5 class="mr-3 mt-1">No ratings</h5>
									<% } %>
									<a href="/business/write_review/<%= business.id %>" class="mt-1"><h5>Write a review</h5></a>
								</div>
					<p class="mt-2" style="font-size: 20px;"><i class="fas fa-phone"></i> <%= business.phone %></p>
								<div class="buttonGroup mt-3">
									<a href="#" class="btn btn-warning mb-3"><i class="fas fa-globe"></i> Website</a>
									<a href="#" class="btn btn-warning mb-3"><i class="fas fa-envelope"></i> Email</a>
								</div>
				</div>
				<div class="quickInfo">
					<ul>
						<li><strong>Why us?</strong></li>
						<li>Afforable prices</li>
						<li>Special loyalty deals</li>
						<li>24hr service</li>
					</ul>
				</div>
				<p class="lead"><%= business.description %></p>
			</div>
			<div class="col-md-5" style="background-color: coral">
				
			</div>
		</div>
		<div class="row mt-5">
			<div class="col-md-12">
				<div class="reviewListing">
					<h2 class="mt-3 mb-4">Reviews</h2>
					<% business.comments.forEach((comment) => { %>
						<a href="#"><p class="mt-5" style="font-size: 20px;"><i class="far fa-user"></i> <%= comment.comment_author %></p></a>
						<% for(let i = 0; i < comment.comment_stars; i++) { %>
						<i class="fas fa-star checked mb-3"></i>
						<% } %>
						<h3><%= comment.comment_title %></h3>
						<p style="font-size: 20px;"><%= comment.comment_body %></p>
					<% }) %>
				</div>
			</div>
		</div>
	</div>
<% include partials/footer %>