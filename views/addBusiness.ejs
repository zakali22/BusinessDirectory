<% include partials/head %>
	<div class="container">
		<h1 class="display-4 text-center">Add a business</h1>
		<form >
		  <div class="form-group">
		    <label for="business">Business Name</label>
		    <input type="text" class="form-control" id="business" placeholder="Business name">
		  </div>
		  <div class="form-group">
		    <label for="owner">Business Owner Name</label>
		    <input type="text" class="form-control" id="owner" placeholder="Full name">
		  </div>
		  <div class="form-group">
		    <label for="type">Business Type</label><br>
		    <select class="form-control">
		    	<option>Types</option>
		    </select>
		  </div>
		  <div class="form-group">
		    <label for="number">Phone number</label>
		    <input type="text" class="form-control" id="number" placeholder="Phone number">
		  </div>
		  <div class="form-group">
		    <label for="street">Street Address</label>
		    <input type="text" class="form-control" id="street" placeholder="Street address">
		  </div>
		  <div class="form-group">
		    <label for="city">City</label>
		    <input type="text" class="form-control" id="city" placeholder="City">
		  </div>
		  <div class="form-group">
		    <label for="postcode">Postcode</label>
		    <input type="text" class="form-control" id="postcode" placeholder="Postcode">
		  </div>
		  <button type="submit" class="btn btn-outline-primary">Submit</button>
		</form>
	</div>
<% include partials/footer %>