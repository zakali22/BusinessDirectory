<% include partials/head %>
	<div class="container">
		<h1 class="display-4 text-center">Add a business</h1>
		<form method="post" action="/business/add">
		  <div class="form-group">
		    <label for="business">Business Name</label>
		    <input type="text" class="form-control" id="business" placeholder="Business name" name="businesName">
		  </div>
		  <div class="form-group">
		    <label for="owner">Business Owner</label>
		    <input type="text" class="form-control" id="owner" placeholder="Full name" name="ownerName">
		  </div>
		  <div class="form-group">
		    <label for="type">Business Category</label><br>
		    <select class="form-control" name="category">
		    	<option>Types</option>
		    </select>
		  </div>
		  <div class="form-group">
		    <label for="number">Phone number</label>
		    <input type="text" class="form-control" id="number" placeholder="Phone number" name="phone">
		  </div>
		  <div class="form-group">
		    <label for="street">Street Address</label>
		    <input type="text" class="form-control" id="street" placeholder="Street address" name="street">
		  </div>
		  <div class="form-group">
		    <label for="city">City</label>
		    <input type="text" class="form-control" id="city" placeholder="City" name="city">
		  </div>
		  <div class="form-group">
		    <label for="postcode">Postcode</label>
		    <input type="text" class="form-control" id="postcode" placeholder="Postcode" name="postcode">
		  </div>
		  <button type="submit" class="btn btn-outline-primary">Submit</button>
		</form>
	</div>
<% include partials/footer %>